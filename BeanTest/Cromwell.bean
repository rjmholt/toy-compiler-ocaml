#A program of 3-tower Hanoi

proc move(val int a,val int b)

	write "Move a pan from tower-";
	write a;
	write " to tower-";
	write b;
	write "\n";
end

proc hanoi(val int n,val int a,val int b,val int c)
	
	if n = 1 then
		move(a,c);
	else
		hanoi(n - 1,a,c,b);
		move(a,c);
		hanoi(n - 1,b,a,c);
	fi
end

proc main()
	int n;
	
	write "Please input the number of pans:";
	read n;
	hanoi(n,1,2,3);
end
	
