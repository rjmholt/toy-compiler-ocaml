proc fact(ref int n)
    int m;
    
    if (n = 0) then
        n := 1;
    else
        m := n - 1;
        fact(m);
        n := n * m;
    fi
end

proc main()
    int x;
    x := 5;

    write "x = ";
    write x;
    write "\n";

    fact(x);
    write "x! = ";
    write x;
    write "\n";
end
