
proc mutual_one(val int x)
    if x <= 1 then
        write "Finished\n";
    else
        mutual_two(x);
    fi
end

proc main()

  int n;
  write "Collatz Function\n";
  write "enter an int: ";
  read n;

  mutual_one(n);
  write "\n";

end

proc mutual_two(val int x)
    write x;
    write "\n";

    if x - 2 * (x / 2) = 0 then
        mutual_one(x/2);
    else
        mutual_one(3*x # Hello
                   + 1);
    fi
end
